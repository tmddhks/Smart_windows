<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kmc.teamproject.WeatherActivity">

    <android.support.constraint.Guideline
        android:id="@+id/glMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_side"
        app:layout_constraintBottom_toTopOf="@+id/glMiddle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="513"
        app:scale_base_width="1080">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/weatherinfo_weather"
            android:textStyle="bold"
            app:scale_height="80"
            app:scale_left="0"
            app:scale_textsize="40"
            app:scale_top="0"
            app:scale_width="350" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:scale_height="700"
            app:scale_left="0"
            app:scale_top="100"
            app:scale_width="700" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_side"
        android:layout_marginRight="@dimen/margin_side"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="@+id/glMiddle">

    </View>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_side"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glMiddle"
        app:scale_base_height="513"
        app:scale_base_width="1080">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/weatherinfo_sensor"
            android:textStyle="bold"
            app:scale_height="80"
            app:scale_left="0"
            app:scale_textsize="40"
            app:scale_top="0"
            app:scale_width="350" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:scale_height="700"
            app:scale_left="0"
            app:scale_top="100"
            app:scale_width="700" />
    </com.ssomai.android.scalablelayout.ScalableLayout>


</android.support.constraint.ConstraintLayout>
