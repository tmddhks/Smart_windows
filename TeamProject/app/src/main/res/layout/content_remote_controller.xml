<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kmc.teamproject.RemoteControllerActivity">

    <!--잠금 on/off 버튼-->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/sl1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_side"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="300"
        app:scale_base_width="1080">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:text="@string/remote_controller_onoff"
            android:textStyle="bold"
            app:scale_height="110"
            app:scale_textsize="80"
            app:scale_width="400" />

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/togle"
            android:textOff="잠김"
            android:textOn="풀림"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_textsize="40"
            app:scale_top="50"
            app:scale_width="410" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <!--현재상태와 창문을 열고 닫을 수 있는 버튼-->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/sl2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_side"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sl1"
        app:scale_base_height="550"
        app:scale_base_width="1080">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:text="@string/remote_controller_textview_text1"
            android:textColor="@color/black"
            app:scale_height="70"
            app:scale_textsize="40"
            app:scale_top="30"
            app:scale_width="200" />

        <ImageView
            android:id="@+id/ivState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorless"
            android:src="@drawable/close"
            app:scale_height="360"
            app:scale_width="400" />

        <ImageButton
            android:id="@+id/ibOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorless"
            android:scaleType="centerInside"
            android:src="@drawable/right"
            app:scale_height="200"
            app:scale_left="730"
            app:scale_top="170"
            app:scale_width="200" />

        <ImageButton
            android:id="@+id/ibClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorless"
            android:scaleType="centerInside"
            android:src="@drawable/left"
            app:scale_height="200"
            app:scale_left="147"
            app:scale_top="170"
            app:scale_width="200" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <!--긴급전화 버튼-->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_side"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sl2"
        app:scale_base_height="550"
        app:scale_base_width="1080">

        <ImageButton
            android:id="@+id/ibHelpCall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@color/colorless"
            android:scaleType="centerInside"
            android:src="@drawable/alarm"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="100" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</android.support.constraint.ConstraintLayout>
